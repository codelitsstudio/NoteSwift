{
  "compilerOptions": {
    "target": "es5",                               
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@student/*": ["apps/student/*"],
      "@teacher/*": ["apps/teacher/*"],
      "@admin/*": ["apps/admin/*"],
      "controller/*": ["controller/*"],
      "services/*": ["services/*"],
      "models/*": ["models/*"],
      "lib/*": ["lib/*"],
      "middlewares/*": ["middlewares/*"],
      "routes/*": ["routes/*"],
      "@shared/*": ["../../shared/*"]
    },                       
    "outDir": "compiled",                            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}