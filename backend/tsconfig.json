{
  "compilerOptions": {
    "target": "es5",                               
    "baseUrl": "./src",
    "paths": {
      "controller/*": ["controller/*"],
      "services/*": ["services/*"],
      "models/*": ["models/*"],
      "lib/*": ["lib/*"],
      "middlewares/*": ["middlewares/*"],
      "routes/*": ["routes/*"],
      "@shared/*": ["../../shared/*"]
    },                       
    "module": "commonjs",    
    "outDir": "compiled",                            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}